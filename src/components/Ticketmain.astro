---
import '../style.css';
import Button from "./Button.astro";
import illustration from '../../src/assets/images/placeholderimage1.png';

const {data} = Astro.props;
//console.log(data)
---

<div class="ticket">


    <div class="top">
        <img src={`/icons/${data.illustration}`} alt="illustration">
        <h2 class="title">{data.title}</h2>

</div>



<style>
    .ticket {
        position: relative;
        width: 275px;
        height: 575px;
        border-radius: 6.671px;
        background: linear-gradient(164deg, rgba(248, 248, 248, 0.05) -6.67%, rgba(177, 220, 236, 0.50) 82.82%);
        box-shadow: 0px 0.83391px 10.00692px 0px rgba(0, 0, 0, 0.10);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        padding: 20px;
        color: white;
        text-align: center;
    }
    .title {
        color: var(--accent-yellow);
        font-size: 50px;
        margin: 0;
        line-height: 50px;
    }
    .subtitle {
        margin: 0;
    }
    img {
        width: 300px;
        height: 200px;
    }
    .badge {
        position: absolute;
        top: 0;
        left: 65%;
        background-color: var(--accent-orange);
        font-size: 13px;
        padding: 4px;
        border-radius: 0px 0px 5.003px 5.003px;
        box-shadow: 0px 3.33564px 3.33564px 0px rgba(0, 0, 0, 0.25);
    }
</style>