---
import '../style.css';
import Button from "./Button.astro";
import illustration from '../../src/assets/images/placeholderimage1.png';

const {data} = Astro.props;
console.log(data)
---

<div class="ticket">

    {data.badge && <div class="badge">{data.badge}</div>}
    <div class="top">
        <img src={illustration.src} alt="illustration">
        <h2 class="title">{data.title}</h2>
        <h4 class="subtitle">{data.subtitle}</h4>
    </div>
    <div set:html={data.content} class="body"> 

    </div>
    <div class="bottom">
        <h4 class="price">
            DKK: {data.price}
        </h4>
        <Button href={`tickets/${data.url}`} variant="filled">Buy</Button>
    </div>
</div>



<style>
    .ticket {
        position: relative;
        width: 275px;
        height: 610px;
        border-radius: 6.671px;
        background: linear-gradient(164deg, rgba(248, 248, 248, 0.05) -6.67%, rgba(177, 220, 236, 0.50) 82.82%);
        box-shadow: 0px 0.83391px 10.00692px 0px rgba(0, 0, 0, 0.10);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: space-between;
        padding: 20px;
        color: white
    }
    .title {
        color: var(--accent-yellow);
        margin: 0;
    }
    .subtitle {
        margin: 0;
    }
    img {
        width: 125px;
        aspect-ratio: 1/1;
    }
    .body {
        font-size: 14px;
        font-weight: 300;
    }
    .bottom {
        display: flex;
        flex-direction: column;
        align-self: center;
        gap: 5px;
    }
    .badge {
        position: absolute;
        top: 0;
        left: 65%;
        background-color: var(--accent-orange);
        font-size: 13px;
        padding: 4px;
        border-radius: 0px 0px 5.003px 5.003px;
        box-shadow: 0px 3.33564px 3.33564px 0px rgba(0, 0, 0, 0.25);
    }
</style>