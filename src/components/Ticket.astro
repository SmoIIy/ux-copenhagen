---
import '../style.css';
import Button from "./Button.astro";
import illustration from '../../src/assets/images/placeholderimage1.png';
---

<div class="ticket">
    <div class="badge">Best Value!</div>
    <img src={illustration.src} alt="illustration">
    <h2 class="title">Full event ticket</h2>
    <h4 class="subtitle">On-site - ticket information</h4>
    <div class="body">
        <p>Join us live* in Copenhagen! This ticket includes:</p>
        <ul>
            <li>Live and online talks, workshops, panel discussions, and Round Table sessions (Mar 20-21)</li>
            <li>Access to the Speakersâ€™ Dinner on day 1, March 20</li>
            <li>A fun pre-conference event (1-2 hours, late afternoon) on March 19</li>
            <li>Full access to the live-stream for 3 months after the event</li>
            <li>Food and drinks during the conference (Mar 20-21)</li>
            <li>Merchandise and conference goodies</li>
        </ul>
    </div>
    <div class="bottom">
        <h4 class="price">
            DKK: 6499,-
        </h4>
        <Button href="#" variant="filled">Buy</Button>
    </div>
</div>

<style>
    .ticket {
        position: relative;
        width: 275px;
        height: 550px;
        border-radius: 6.671px;
        background: linear-gradient(164deg, rgba(248, 248, 248, 0.05) -6.67%, rgba(177, 220, 236, 0.50) 82.82%);
        box-shadow: 0px 0.83391px 10.00692px 0px rgba(0, 0, 0, 0.10);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        padding: 20px;
        color: white
    }
    .title {
        color: var(--accent-yellow);
        margin: 0;
    }
    .subtitle {
        margin: 0;
    }
    img {
        width: 125px;
        aspect-ratio: 1/1;
    }
    p, li {
        font-size: 13px;
        font-weight: 300;
    }
    .bottom {
        display: flex;
        flex-direction: column;
        align-self: center;
        gap: 5px;
    }
    .badge {
        position: absolute;
        top: 0;
        left: 65%;
        background-color: var(--accent-orange);
        font-size: 13px;
        padding: 4px;
        border-radius: 0px 0px 5.003px 5.003px;
        box-shadow: 0px 3.33564px 3.33564px 0px rgba(0, 0, 0, 0.25);
    }
</style>